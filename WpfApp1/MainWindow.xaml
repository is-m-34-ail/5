<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Integral Calculator - Жаворонков Александр Игоревич., 3-47" Height="250" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Метка и TextBox для a -->
        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">a:</Label>
        <TextBox x:Name="TextBoxA" Grid.Row="0" Grid.Column="1" Margin="5" />

        <!-- Метка и TextBox для b -->
        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">b:</Label>
        <TextBox x:Name="TextBoxB" Grid.Row="1" Grid.Column="1" Margin="5" />

        <!-- Метка и TextBox для n -->
        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">n:</Label>
        <TextBox x:Name="TextBoxN" Grid.Row="2" Grid.Column="1" Margin="5" />

        <!-- Радиокнопки для выбора метода -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,15,0,15">
            <RadioButton x:Name="MethodTrapezoidRadio" Content="Метод трапеций"
                         IsChecked="True" Margin="10,0"/>
            <RadioButton x:Name="MethodSimpsonRadio" Content="Метод Симпсона"
                         Margin="10,0"/>
        </StackPanel>

        <!-- Кнопка для запуска вычисления -->
        <Button x:Name="CalculateButton" Grid.Row="4" Grid.ColumnSpan="2" Content="Вычислить"
                HorizontalAlignment="Center" Width="100"
                Click="CalculateButton_Click" />

        <!-- Текстовое поле для вывода результата -->
        <TextBlock x:Name="ResultText" Grid.Row="5" Grid.ColumnSpan="2"
                   Margin="0,20,0,0" FontWeight="Bold" FontSize="14"
                   TextWrapping="Wrap" Text="" />
    </Grid>
</Window>
